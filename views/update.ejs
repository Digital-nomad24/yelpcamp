<%layout('/layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Update</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= find._id %>?_method=PUT" class="validation" novalidate method="post" enctype="multipart/form-data" >
                <div>
                    <div class="mb-3">
                        <label class="form-label" for="title">ENTER title</label>
                        <input class="form-control" type="text" id="title" value="<%=find.title%>" name="campground[title]"  required>
                        <div class="valid-feedback">
                            validated
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">ENTER LOCATION</label>
                        <input class="form-control" type="text" id="location" name="campground[location]" value="<%=find.location%>">
                        <div class="valid-feedback">
                            validated
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input type="text" class="form-control" value="<%=find.price%>" name="campground[price]" aria-label="price" aria-describedby="price"  required>
                        <div class="valid-feedback">
                            validated
                        </div>
                      </div>
                    <div class="mb-3">
                        <label class="form-label" for="description" >ENTER Description</label>
                        <textarea class="form-control" type="text" value="<%=find.description%>" id="description" name="campground[description]"  required><%=find.description %> </textarea>
                        <div class="valid-feedback">
                            validated
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image">Add Images</label>
                        <input type="file" name="image" id="images" multiple>
                    </div>
                    <div class="mb-3">
                        <% find.images.forEach((img,i)=>{%>
                              <img src="<%=img.thumbnail %>" class="img-thumbnail"  alt="...">
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="image-<%=i%>" name="deletedImages[]"  value="<%=img.filename%>">
                                <label class="form-check-label" for="image-<%=i%>">delete</label>
                              </div>
                            <% }) %>
                    </div>
                <button class="btn btn-success">
                    SUBMIT
                </button>
                <form action="/campgrounds/<%= find._id %>">
                <button class="btn btn-primary">BACK
                </button>
            </form>
                </div>
            </form>
        </div>
    </div>
    
